<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:style>
    .tagline { font-weight: bold; letter-spacing: 10px; font-size: 20px; color: #ababab; }
    .background { background-color: #f0f0f0; }
    .page { background-color: #ededed; border: 1px solid #666; margin: auto; box-shadow: 0px 10px 8px #888; }
    .header { background-color: #fff; border-bottom: 1px solid #666; box-shadow: inset 0px -1px 0px #ccc;  }
    .content { background-color: #e0e0e0; border: 1px dotted blue; }
  </ui:style>
  <g:FocusPanel ui:field="focusPanel" width="100%" height="100%" addStyleNames="{style.background}">
    <g:FlowPanel width="960px" height="" addStyleNames="{style.page}">
        <g:HorizontalPanel width="100%" height="100px" addStyleNames="{style.header}">
        	<g:VerticalPanel width="300px" height="100px">
        		<g:Image url="images/cognistats_logo.jpg" width="100%"
            height="72px" />
        		<g:HTML wordWrap="true" horizontalAlignment="ALIGN_CENTER" width="100%" height="26px"><div class="{style.tagline}">quantified mind</div></g:HTML>
        	</g:VerticalPanel>
        	<g:Cell verticalAlignment="ALIGN_BOTTOM">
        		<g:HorizontalPanel width="100%" height="29px" verticalAlignment="ALIGN_TOP">
            <g:LayoutPanel width="100%" height="100%">
              <g:layer right="0px" width="194px" top="0px" height="30px">
                <g:MenuBar>
                  <g:MenuItem text="Login" ui:field="menuItemLoginLogout" />
                  <g:MenuItem text="Test Selector" ui:field="menuItemTestSelector"/>
                </g:MenuBar>
              </g:layer>
              <g:layer right="194px" width="173px" top="10px" height="20px">
                <g:Label ui:field="labelUserId" horizontalAlignment="ALIGN_RIGHT" />
              </g:layer>
            </g:LayoutPanel>
          </g:HorizontalPanel>
        	</g:Cell>
        </g:HorizontalPanel>
        <g:FlowPanel width="100%" height="600px" ui:field="workspace">
            <g:LayoutPanel width="100%" height="100%">
              <g:layer left="50%" width="115px" top="50%" height="29px">
                <g:Button text="Test Selector" ui:field="buttonTestSelector" />
              </g:layer>
            </g:LayoutPanel>
        </g:FlowPanel>
    </g:FlowPanel>
  </g:FocusPanel>
</ui:UiBinder> 
