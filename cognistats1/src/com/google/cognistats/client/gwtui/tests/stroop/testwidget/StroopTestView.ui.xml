<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:tsr="urn:import:com.google.cognistats.client.gwtui.tests.tsr.testwidget">
	<ui:style>
		.red { foreground-color: #f00; }
		.green { foreground-color: #0f0; }
		.blue { foreground-color: #00f; }
		.transparent { background-color: transparent; border: 2px dashed yellow; }
		.test { background-color: #0f0; opacity:0.5; }
	</ui:style>
	<g:LayoutPanel width="100%" height="100%" addStyleNames="{style.transparent}">
		<g:layer left="0px" width="100.0pct" top="0px" height="100.0pct">
		<tsr:TSRTestView height="100%" width="100%" ui:field="tsrTest" addStyleNames="{style.test}" />
		</g:layer>
		<g:layer left="35.0pct" width="30.0pct" top="46.0pct" height="8.0pct">
			<g:Label text="Stroop" horizontalAlignment="ALIGN_CENTER" ui:field="stroopLabel"/>
		</g:layer>
		
	</g:LayoutPanel>
</ui:UiBinder> 